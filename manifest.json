{
    "manifest_version": 2,
    "name": "codeOCR",
    "version": "1.0",
    "description": "Language-aware OCR for code snippets.",
    "icons": {
        "48": "icon-48.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "clipboardWrite",
        "downloads",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "commands": {
        "toggle-selection-mode": {
            "suggested_key": {
                "default": "Alt+C",
                "mac": "Command+C"
            },
            "description": "Toggle selection mode for codeOCR"
        }
    },
    "browser_action": {
        "default_icon": "icons/icon-48.png",
        "default_title": "Take Code Screenshot"
    }
}
