{
    "manifest_version": 3,
    "name": "codeOCR",
    "version": "1.0",
    "description": "Language-aware OCR for code snippets.",
    "icons": {
        "48": "icon-48.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "clipboardWrite",
        "downloads",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "action": {
        "default_icon": "icons/icon-48.png",
        "default_title": "Take Code Screenshot"
    },
    "commands": {
        "toggle-selection-mode": {
            "suggested_key": {
                "default": "Alt+C",
                "mac": "Command+C"
            },
            "description": "Toggle selection mode for codeOCR"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "display.js"
            ],
            "run_at": "document_idle"
        }
    ]
}
